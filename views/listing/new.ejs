<% layout('/layouts/boilerplate') -%>

  <h2>Create the New listing</h2>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form method="POST" action="/listing/" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <lable for="description" class="form-label">Description</lable>
          <textarea name="listing[description]" cols="30" rows="10" class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <!-- <div class="mb-3">
          <lable for="image" class="form-label">Image Link</lable>
          <input type="text" name="listing[image]" placeholder="URL/Link" class="form-control" />
          <div class="invalid-feedback">Enter valid link</div>
        </div> -->
        <div class="mb-3">
          <lable for="image" class="form-label">Upload image</lable>
          <input type="file" name="listing[image]" class="form-control" />
          <div class="invalid-feedback">Enter valid link</div>
        </div>

        <div class="mb-3">
          <lable for="price" class="form-label">Price</lable>
          <input name="listing[price]" placeholder="â‚¹10,000" class="form-control" required />
          <div class="invalid-feedback">Enter the valid Price!</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="location" class="form-label">location</lable>
            <input type="text" name="listing[location]" placeholder="Patna, Bihar" class="form-control" required />
            <div class="invalid-feedback">location</div>
          </div>

          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input type="text" name="listing[country]" placeholder="India" class="form-control" required />
            <div class="invalid-feedback">Country</div>
          </div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </div>
  </div>